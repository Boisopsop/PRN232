          "name": "Login Admin - Get Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// ===== TEST 1: Status Code 200 =====",
                  "pm.test('Status code is 200 OK', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// ===== TEST 2: JSON Schema Validation =====",
                  "const loginSchema = {",
                  "    type: 'object',",
                  "    required: ['success', 'message', 'data'],",
                  "    properties: {",
                  "        success: { type: 'boolean', enum: [true] },",
                  "        message: { type: 'string' },",
                  "        data: {",
                  "            type: 'object',",
                  "            required: ['token', 'email', 'role', 'roleName'],",
                  "            properties: {",
                  "                token: { type: 'string', minLength: 1 },",
                  "                accountId: { type: ['integer', 'null'] },",
                  "                email: { type: 'string', format: 'email' },",
                  "                name: { type: ['string', 'null'] },",
                  "                role: { type: 'integer', enum: [0, 1, 2] },",
                  "                roleName: { type: 'string', enum: ['Admin', 'Staff', 'Lecturer'] }",
                  "            }",
                  "        },",
                  "        errors: { type: 'null' }",
                  "    }",
                  "};",
                  "",
                  "pm.test('Response matches login JSON schema', function() {",
                  "    pm.response.to.have.jsonSchema(loginSchema);",
                  "});",
                  "",
                  "// ===== TEST 3: Save Token =====",
                  "pm.test('Token saved to collection variable', function() {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.data.token).to.be.a('string').and.not.empty;",
                  "    pm.collectionVariables.set('adminToken', response.data.token);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@FUNewsManagementSystem.org\",\n    \"password\": \"@@abc123@@\"\n}"
