        {
          "name": "Login - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Test 1: Check HTTP Status",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Test 2: Save Token (Case Insensitive Support)",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data) {",
                  "    // Try finding token in various casings",
                  "    var token = jsonData.data.token || jsonData.data.Token || jsonData.data.accessToken;",
                  "    ",
                  "    if (token) {",
                  "        pm.collectionVariables.set(\"token\", token);",
                  "        console.log(\"Token saved successfully: \" + token.substring(0, 10) + \"...\");",
                  "    } else {",
                  "        console.log(\"Token field not found in response data\");",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountEmail\": \"admin@FUNewsManagementSystem.org\",\n  \"accountPassword\": \"@@abc123@@\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "login"
              ]
            }
          }
