              "raw": "{\n  \"newsTitle\": \"Updated Test Article\",\n  \"headline\": \"Updated headline\",\n  \"newsContent\": \"Updated content from Postman.\",\n  \"newsSource\": \"Postman Update\",\n  \"categoryId\": 1,\n  \"newsStatus\": true\n}"
            },
            "url": {
